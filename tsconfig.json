{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es5", "es6", "dom", "dom.iterable"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "module": "CommonJS",
    "baseUrl": "./src",
    "paths": {
      "@root/*": ["./*"],
      "@utils/*": ["./utils/*"],
      "@state/*": ["./state/*"],
      "@assets/*": ["./assets/*"],
      "@components/*": ["./components/*"],
      "@containers/*": ["./containers/*"],
      "@apis/*": ["./apis/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
